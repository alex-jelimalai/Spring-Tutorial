<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
    http://www.springframework.org/schema/aop 
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">
    <aop:aspectj-autoproxy/>
    <aop:config>
        <aop:aspect ref="audience">
            <aop:pointcut id="play" expression="execution(* in_action.ch4.Singer.play(..))"/>
            <aop:pointcut id="play2" expression="execution(* in_action.ch4.Singer.play(..))"/>
            <aop:before pointcut-ref="play" method="takeSeats"/>
            <aop:before pointcut-ref="play" method="turnOffPhones"/>
            <aop:after-returning pointcut-ref="play" method="applaud"/>
            <aop:after-throwing pointcut-ref="play" method="demandRefund"/>
            <aop:around pointcut-ref="play2" method="watchPerformance"/>
        </aop:aspect>

        <aop:aspect ref="magician">
            <aop:pointcut id="thinking"
                          expression="execution(*
				in_action.ch4.mind.Thinker.thinkOfSomething(String))
				and args(thoughts)"/>
            <aop:before pointcut-ref="thinking" method="interceptThoughts"
                        arg-names="thoughts"/>
        </aop:aspect>
    </aop:config>

    <bean id="audience" class="in_action.ch4.Audience"/>
    <bean id="audienceAnnotated" class="in_action.ch4.AudienceAnnotated"/>

    <bean id="voice" class="in_action.ch4.Voice">
        <property name="singerName" value="Yan Raiburg"/>
    </bean>

    <bean id="magician" class="in_action.ch4.mind.Magician"/>
    <bean id="volunter" class="in_action.ch4.mind.Volunteer"/>


</beans>